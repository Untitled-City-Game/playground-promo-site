---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import * as hero_md from "../content/home.md";
const images = import.meta.glob<{ default: ImageMetadata }>(
	"/src/assets/*.{jpeg,jpg,png,gif}"
);
---

<section class="py-20 flex md:flex-row md:align-middle flex-col px-4 md:px-0 gap-10 md:gap-0">
	<div class="flex flex-col gap-6 justify-center items-start md:w-1/2">
		<h1 class="text-6xl font-bold">{hero_md.frontmatter.title}</h1>
		<p>
			{hero_md.frontmatter.description}
		</p>
		<a
			rel="noopener noreferrer"
			href={hero_md.frontmatter.cta_link}
			target="_blank"
			class="bg-pgreen px-5 py-3 border-1 border-black rounded-lg shadow-card hover:shadow-hover transition">
			{hero_md.frontmatter.cta}
		</a>
	</div>
	<div
		class="md:w-1/2 object-contain flex items-center justify-center p-10 group">
		<a
			rel="noopener noreferrer"
			href="/games/connect_four"
			target="_blank">
			<div
				class="bg-pblue border-3 border-black rounded-2xl w-60 shadow-card group-hover:shadow-hover flex transition relative">
				<div
					class="absolute -top-8 -left-12 text-5xl bg-ppink px-5 py-1 z-10 shadow-card group-hover:shadow-hover transition rounded-t-2xl border-3 border-black rounded-bl-2xl rounded-br-sm">
					<Icon name="lock" />
				</div>
				<div
					class="absolute top-16 -right-16 text-5xl bg-pyellow p-2 z-10 shadow-card group-hover:shadow-hover transition rounded-full border-3 border-black">
					<Icon name="ticket" />
				</div>
				<div
					class="absolute text-nowrap flex items-center gap-4 -bottom-12 right-0 pr-4 bg-pgreen pl-1 z-10 shadow-card1 group-hover:shadow-card transition rounded-full border-3 border-black">
					<Icon name="ttt" />
					<p>Connect Four</p>
				</div>
				<div class= "w-60 h-auto relative rounded-2xl">
					<Image
						class="group-hover:scale-105 transition"
						src={images["/src/assets/screenshot1.png"]()}
						alt="Sorolla, photo wiki"
					/>
				</div>
			</div></a
		>
	</div>
</section>
